{
  "name": "tiktok-live-checker",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:utils": "NODE_OPTIONS=--experimental-vm-modules jest src/__tests__/utils",
    "test:services": "NODE_OPTIONS=--experimental-vm-modules jest src/__tests__/services",
    "test:lib": "NODE_OPTIONS=--experimental-vm-modules jest src/__tests__/lib",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest src/__tests__/app.test.js src/__tests__/index.test.js",
    "test:legacy": "NODE_OPTIONS=--experimental-vm-modules jest main.test.js"
  },
  "dependencies": {
    "google-auth-library": "^9.15.1",
    "google-spreadsheet": "^4.1.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/src/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
